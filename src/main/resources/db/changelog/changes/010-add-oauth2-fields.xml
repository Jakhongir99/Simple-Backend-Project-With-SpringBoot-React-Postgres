<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="010-add-oauth2-fields" author="system">
        <comment>Add OAuth2-related fields to users table</comment>
        
        <!-- Add OAuth2 provider field -->
        <addColumn tableName="users">
            <column name="oauth2_provider" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        
        <!-- Add OAuth2 provider ID field -->
        <addColumn tableName="users">
            <column name="oauth2_provider_id" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        
        <!-- Add profile picture field -->
        <addColumn tableName="users">
            <column name="profile_picture" type="TEXT">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        
        <!-- Add email verified field -->
        <addColumn tableName="users">
            <column name="email_verified" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        
        <!-- Make password nullable for OAuth2 users -->
        <modifyDataType tableName="users" columnName="password" newDataType="VARCHAR(255)"/>
        
        <!-- Make phone nullable for OAuth2 users -->
        <modifyDataType tableName="users" columnName="phone" newDataType="VARCHAR(255)"/>
        
        <!-- Create index on OAuth2 provider and provider ID combination -->
        <createIndex tableName="users" indexName="idx_users_oauth2_provider">
            <column name="oauth2_provider"/>
            <column name="oauth2_provider_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
